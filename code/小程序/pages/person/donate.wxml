<!--pages/person/donate.wxml-->
<container>
<view class="page">
<view class='top-title'>所有用户总计捐赠积分: <view class='top-title-num'>{{ totalCredit }}</view></view>
<view>
<view class='img'>
<image class="title-img" src='../../style/images/person/heart2.png'></image>
</view>
</view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="输入捐赠数额" name="input"/>
                </view>
            </view>
        </view>
       <view class="weui-btn-area">
            <button class="weui-btn" type="primary" formType="submit">确定</button>
        </view>
    </form>
</view>

</container>
