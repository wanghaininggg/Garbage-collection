/* person/person.wxss */
@import "../../style/weui.wxss";
.info-box{
  margin-bottom: 40rpx;
}
.user-info{
  display: flex;
  background-color: #fff;
  min-height: 85rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  flex-direction: column;
  margin: 30rpx 0 -1px;
  padding: 25rpx 30rpx 20rpx;
}
.info-hd {
  display: flex;
  align-items: center;
}
.bind-btn {
  color: #aaa;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
}
.user-title {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 25rpx;
}
.user-name {
  font-size: 16pt;
  line-height: 160%;
  letter-spacing: 1px;
}
.user-id {
  font-size: 11pt;
  color: #8b8b8b;
}
.user-info-img{
  margin-right: 5px;
  vertical-align: middle;
  width:25px; 
  height: 25px;
}

.btn-icon {
  width: 45rpx;
  height: 45rpx;
}

.btn-enter {
  width: 18rpx;
  height: 27rpx;
}

.btn-text {
  flex: 1;
  margin-left: 20rpx;
}
.btn-open {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-left: 10rpx;
}
.more-btn{
  display: flex;
  background-color: #fff;
  min-height: 85rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  align-items: center;
  font-size: 13pt;
  padding: 0 30rpx;
  margin-top: 30rpx;
  border-radius: 5px;
}
.login-btn{
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #7acfa6;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 400rpx 3% 0;
}